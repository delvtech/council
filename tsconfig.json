{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "paths": {
        "artifacts": ["./artifacts"],
        "artifacts/*": ["./artifacts/*"],
        "scripts": ["./scripts"],
        "scripts/*": ["./scripts/*"],
        "src": ["./src"],
        "src/*": ["./src/*"],
        "test": ["./test"],
        "test/*": ["./test/*"],
        "typechain": ["./typechain"],
        "typechain/*": ["./typechain/*"],
      },
    },
    "include": [
      "./artifacts",
      "./scripts",
      "./src",
      "./test",
      "./typechain"
    ],
    "files": ["./hardhat.config.ts", "./hardhat.config.test.ts"]
  }